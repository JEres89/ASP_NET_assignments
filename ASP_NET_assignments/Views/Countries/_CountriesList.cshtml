@model CountryViewModel

@{
}
<style>
	#countriesList .itemRow:hover {
		background-color: moccasin;
		cursor: pointer;
	}

	.removeEntitybtn:hover {
		background-color: orangered;
		cursor: pointer;
	}
</style>
<div id="countriesList" class="container">
	<div class="row" id="columnNames">
		@for(int i = 0 ; i < Country.StringifyDisplayNames.Length ; i++)
		{
			<div class="col">
				@Country.StringifyDisplayNames[i]
			</div>
		}
		<div class="col">Remove</div>
	</div>
	@while(!Model.ListEnd)
	{
		var next = Model.GetNextItem;
		if(next != null)
		{
			<partial name="_Country" model="next" />
		}
	}
</div>
