@model LanguageViewModel

@{
}
<style>
	#languagesList .itemRow:hover {
		background-color: moccasin;
		cursor: pointer;
	}

	.removeEntitybtn:hover {
		background-color: orangered;
		cursor: pointer;
	}
</style>
<div id="languagesList" class="container">
	<div class="row" id="columnNames">
		@for(int i = 0 ; i < Language.StringifyDisplayNames.Length ; i++)
		{
			<div class="col">
				@Language.StringifyDisplayNames[i]
			</div>
		}
		<div class="col">Remove</div>
	</div>
	@while(!Model.ListEnd)
	{
		var next = Model.GetNextItem;
		if(next != null)
		{
			<partial name="_Language" model="next" />
		}
	}
</div>
