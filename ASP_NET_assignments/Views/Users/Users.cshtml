
@{
	ViewData["Title"] = "Users";
}

<div class="container" id="Users_view" style="min-height: 600px;">
	<script src="~/lib/jquery/dist/jquery.min.js"></script>

	<h1>Users Index</h1>
	<div class="row">
		<div class="col-2">
			<input type="button" id="show_userslist" value="List Users" />
		</div>
		<div class="col-2">
			<input type="button" id="show_details" value="Details" />
		</div>
	</div>

	<p id="message">@Html.Raw(ViewBag.message) </p>
	
	<div class="container" id="details_container" style="display:none">
		<input type="text" id="id_text" placeholder="User ID" />
		<input type="button" id="get_details" value="Show" />
		<input type="button" id="remove_row" value="Delete" />
		<input type="button" id="edit_item" value="Edit" style="display:none" />

		<div id="details_view">
		</div>
	</div>

	<div id="create_view" style="display:none">
	</div>

	<div class="container" id="list_container" style="display:none">
		<form id="search_entries">
			<fieldset>
				<legend>Find User</legend>
				<input type="hidden" name="formName" value="search_user" />
				<input type="text" id="search_value" placeholder="Search" />
				<input type="submit" id="search_submit" value="Find" />
			</fieldset>
		</form>

		<div id="list_view">
		</div>
	</div>

	<script src="~/Scripts/ListView_scripts.js"></script>
</div>